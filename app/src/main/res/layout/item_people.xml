<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_people_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="id" />

    <ImageView
        android:id="@+id/iv_people_profile"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginVertical="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_img_round_white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@id/tv_people_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_people_profile"
        app:layout_constraintStart_toEndOf="@id/iv_people_profile"
        app:layout_constraintTop_toTopOf="@id/iv_people_profile"
        tools:text="이름" />

    <TextView
        android:id="@+id/tv_people_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_name"
        app:layout_constraintStart_toEndOf="@id/tv_people_name"
        app:layout_constraintTop_toTopOf="@id/tv_people_name"
        tools:text="이메일" />
</androidx.constraintlayout.widget.ConstraintLayout>