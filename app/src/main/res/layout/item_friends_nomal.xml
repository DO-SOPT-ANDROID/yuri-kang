<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_friends_nomal_profile"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friends_nomal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_friends_nomal_profile"
        app:layout_constraintStart_toEndOf="@id/iv_friends_nomal_profile"
        app:layout_constraintTop_toTopOf="@id/iv_friends_nomal_profile"
        tools:text="이름" />

    <TextView
        android:id="@+id/tv_friends_nomal_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_friends_nomal_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_friends_nomal_name"
        tools:text="한줄소개" />

</androidx.constraintlayout.widget.ConstraintLayout>